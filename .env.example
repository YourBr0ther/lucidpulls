# Repository Configuration
# Comma-separated list of repositories to review
REPOS=owner/repo1,owner/repo2,owner/repo3

# GitHub Authentication
# PAT required for API operations (issues, PRs) - SSH handles git clone/push
GITHUB_TOKEN=ghp_xxxxxxxxxxxxx
GITHUB_USERNAME=your-username
GITHUB_EMAIL=your-email@example.com
# SSH key path (optional, defaults to ~/.ssh/id_rsa)
SSH_KEY_PATH=~/.ssh/id_rsa

# LLM Provider (azure|nanogpt|ollama)
LLM_PROVIDER=ollama

# Azure AI Studios
AZURE_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_API_KEY=your-key
AZURE_DEPLOYMENT_NAME=gpt-4

# NanoGPT
NANOGPT_API_KEY=your-key
NANOGPT_MODEL=model-name

# Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=codellama

# Notification Channel (teams|discord)
NOTIFICATION_CHANNEL=discord

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/...

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Schedule (24-hour format, timezone)
SCHEDULE_START=02:00
SCHEDULE_DEADLINE=06:00
REPORT_DELIVERY=07:00
TIMEZONE=America/New_York

# Logging
LOG_LEVEL=INFO
